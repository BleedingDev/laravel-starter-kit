{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "extends": [
    "./node_modules/ultracite/config/oxlint/core/.oxlintrc.json",
    "./node_modules/ultracite/config/oxlint/react/.oxlintrc.json"
  ],
  "ignorePatterns": [".codex/**"],
  "rules": {
    "react/jsx-max-depth": ["error", { "max": 4 }],
    "sort-imports": "off",
    "import/consistent-type-specifier-style": "off",
    "jest/require-hook": "off",
    "react_perf/jsx-no-new-function-as-prop": "off",
    "react_perf/jsx-no-new-array-as-prop": "off",
    "react_perf/jsx-no-new-object-as-prop": "off",
    "react_perf/jsx-no-jsx-as-prop": "off"
  },
  "overrides": [
    {
      "files": ["resources/js/components/ui/**/*.{ts,tsx}"],
      "rules": {
        "func-style": "off",
        "jsx-a11y/label-has-associated-control": "off",
        "no-nested-ternary": "off",
        "sort-keys": "off"
      }
    },
    {
      "files": ["**/*.d.ts"],
      "rules": {
        "import/consistent-type-specifier-style": "off",
        "typescript/consistent-type-imports": "off",
        "typescript/no-import-type-side-effects": "off"
      }
    }
  ]
}
